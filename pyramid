#include<stdio.h>
int main()
{
int n,i,j,spaces;
printf ("Enter a number:");
scanf("%d",&n);
for(i=0; i<=n; i++)
{
for(spaces=1; spaces<=n-rows;spaces++)
{
printf (" ");
}
for(j=1; j<=i;j++)
{
printf ("*");
printf("\n");
}
for(i=1; i<=n; i++);
{
for(spaces=1; spaces<==rows; spaces++)
{
printf (" ");
}
for(cols=1; cols<n-rows; cols++) 
{
printf ("*");
}
printf ("\n");
}
return 0;
}
