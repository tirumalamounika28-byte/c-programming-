#include <stdio.h>
int main()
{
    int n = 5;
 for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < n - i - 1; j++)
        {
            printf(" ");
        }
 int x = 1;
        for (int j = 0; j <= i; j++)
        {
            printf("%d ", x);
            x = x * (i - j) / (j + 1);
        }

        printf("\n");
    }

    return 0;
}
